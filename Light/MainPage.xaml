<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Light.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <ImageButton 
                Grid.Row="0" Grid.Column="0"
                x:Name="LightSwitch"
                Source="turnoff.jpg"
                Clicked="OnLightSwitch" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
